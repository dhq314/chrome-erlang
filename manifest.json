{
    "name": "erlang.ext",
    "version": "0.1",
    "manifest_version": 2,

    "description": "An Erlang Chrome Shell Extension",

    "icons": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
    },

    "browser_action": {
        "default_icon": "favicon.ico",
        "default_title": "Erlang Shell",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "notifications"
    ],

    "content_security_policy": "script-src 'self' https://genfsm.herokuapp.com; object-src 'self'"

}
